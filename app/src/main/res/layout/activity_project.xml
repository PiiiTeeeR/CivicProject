<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProjectActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProjectSubject"
        android:textSize="30dp"
        android:text="Temat" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProjectDescription"
        android:layout_below="@+id/textViewProjectSubject"
        android:textSize="30dp"
        android:text="Opis" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProjectAuthor"
        android:layout_below="@+id/textViewProjectDescription"
        android:textSize="30dp"
        android:text="Autor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProjectLocalization"
        android:layout_below="@+id/textViewProjectAuthor"
        android:textSize="30dp"
        android:text="Lokalizacja" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProjectLikes"
        android:layout_below="@+id/textViewProjectLocalization"
        android:textSize="30dp"
        android:text="Lapki w gore" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProjectDislikes"
        android:layout_below="@+id/textViewProjectLikes"
        android:textSize="30dp"
        android:text="Lapki w dol" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProjectComments"
        android:layout_below="@+id/textViewProjectDislikes"
        android:textSize="30dp"
        android:text="Komentarze" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProjectDate"
        android:layout_below="@+id/textViewProjectComments"
        android:textSize="30dp"
        android:text="Data" />

</RelativeLayout>
